{
  "name": "teachme-ai",
  "version": "1.0.0",
  "description": "Console-based TypeScript application",
  "main": "dist/index.js",
  "bin": {
    "teachme": "./dist/index.js"
  },
  "preferGlobal": true,
  "files": [
    "dist/",
    "src/inputData/",
    ".env.example",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "package": "npm run build && npm pack",
    "prerelease": "npm run lint && npm run type-check && npm test",
    "release:major": "npm run prerelease && npm version major",
    "release:minor": "npm run prerelease && npm version minor",
    "release:patch": "npm run prerelease && npm version patch",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "inquirer": "9.3.8",
    "jest": "^30.2.0",
    "ora": "^9.1.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "figlet": "^1.10.0",
    "openai": "^6.16.0"
  }
}
