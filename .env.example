# Application Configuration
NODE_ENV=development

# OpenAI Configuration
OPENAI_API_KEY= "your api key here"
OPENAI_MODEL=gpt-5-mini
OPENAI_MAX_TOKENS=4096

OPENAI_PROMPT_ID=pmpt_68eeb4dbcbc48195852a4380f91662d201f8e439b2c0dfe9
OPENAI_PROMPT_VERSION=19

# Token Limits & Warnings
OPENAI_CONTEXT_WINDOW=128000
OPENAI_WARNING_THRESHOLD=0.8

# Developer instructions
DEVELOPER_INSTRUCTIONS="You are an expert TypeScript assistant. Be concise and always explain reasoning when asked. Keep code examples minimal and runnable."

# Code Extractor Configuration
# Prompt ID and version for the code extraction feature (managed in OpenAI Responses API)
CODE_EXTRACTOR_PROMPT_ID=pmpt_6903ad9e9dd081978bda5ef30e5d4c1202b07b556afff283
CODE_EXTRACTOR_PROMPT_VERSION=2

# API Configuration
# API_KEY=your_api_key_here
# API_ENDPOINT=https://api.example.com

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Feature Flags
# ENABLE_FEATURE_X=false

# Service Configuration
# TIMEOUT_MS=5000
# MAX_RETRIES=3
# Kata Evaluator Configuration
# Model to use for code evaluation (can be different from main OPENAI_MODEL)
KATA_EVALUATOR_MODEL=gpt-5-mini
# Maximum tokens for evaluation response
KATA_EVALUATOR_MAX_TOKENS=4096
# Optional: use a reusable prompt template managed by the OpenAI Responses API for kata evaluation
# KATA_EVALUATOR_PROMPT_ID should be the prompt resource id and KATA_EVALUATOR_PROMPT_VERSION its version.
# Example:
KATA_EVALUATOR_PROMPT_ID=pmpt_690a1304a6c881968b93fa5797dbc93c06fef6dc0600cf1d
KATA_EVALUATOR_PROMPT_VERSION=5


# Kata File Configuration
# Directory containing kata instruction and rubric files
KATA_INPUT_DATA_PATH=./src/inputData
# Default kata instruction file to load on startup
KATA_DEFAULT_INSTRUCTION_FILE=kata-instructions.json
# Default evaluation rubric file to load on startup
KATA_DEFAULT_RUBRIC_FILE=kata_evaluation_rubric.json